{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "plugin:vue/essential",
        "google"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "vue"
    ],
    "rules": {
      "quotes": [
        "error",
        "single"
      ],
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "no-unused-vars": "error",
      "comma-dangle": [
        "error",
        "never"
      ],
      "linebreak-style": [
        "off"
      ],
      "semi-style": [
        "error",
        "last"
      ],
      "no-empty": "error",
      "no-extra-parens": "error",
      "indent": [
        "error",
        2
      ]
    }
}